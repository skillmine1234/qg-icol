%br
%br
%h1 Listing I-Collect Notifications
%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = render :partial => 'advanced_search'
%br
= "Total Count: #{@icol_notifications.count}"
= will_paginate @icol_notifications, :page_links => true
%br
%table.table.table-bordered.table-striped.table-hover
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
      App Code
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Customer Code
    %th{:style=>'Text-align:left; background-color: lightblue;'}
      Transaction Mode
    %th{:style=>'Text-align:left; background-color: lightblue;'}
      Transaction Number
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Status
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Payment Status
      
  .tbody
    - @icol_notifications.each do |record|   
      %tr
        %td{:style=>'text-align:left;'}
          = link_to 'Show', record
        %td{:style=>'text-align:left;'}
          = record.app_code
        %td{:style=>'text-align:left;'}
          = record.customer_code
        %td{:style=>'text-align:left;'}
          = record.txn_mode
        %td{:style=>'text-align:left;'}
          = record.txn_number
        %td{:style=>'text-align:left;'}
          = record.status_code
        %td{:style=>'text-align:left;'}
          = record.payment_status

:javascript
  $(document).ready(function(){
    $('input[type="text"]'). attr("placeholder", "Multisearch Search Enabled");
  });