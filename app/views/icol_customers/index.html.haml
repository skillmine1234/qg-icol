%br
= link_to 'New I-Collect Customer', new_icol_customer_path
%br
%br
%h1 Listing I-Collect Customers
%h2.collapsible
  Advanced Search
  %span.caret
.collapsible-content
  = render :partial => 'advanced_search'
%br
= "Total Count: #{@icol_customers.count}"
= will_paginate @icol_customers, :page_links => true
%br
%table.table.table-bordered.table-striped.table-hover
  .thead
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
    %th{:style=>'text-align:left; background-color: lightblue;'}
      App Code
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Customer Code
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Template Code
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Validate URL
    %th{:style=>'text-align:left; background-color: lightblue;'}
      Notify URL
			
  .tbody
    - @icol_customers.each do |customer|
      %tr
        %td{:style=>'text-align:left;'}
          = link_to 'Show', customer
        %td{:style=>'text-align:left;'}
          = link_to 'Edit', edit_icol_customer_path(customer)
        %td{:style=>'text-align:left;'}
          = customer.app_code
        %td{:style=>'text-align:left;'}
          = customer.customer_code
        %td{:style=>'text-align:left;'}
          = customer.template_code
        %td{:style=>'text-align:left;'}
          = customer.validate_url
        %td{:style=>'text-align:left;'}
          = customer.notify_url